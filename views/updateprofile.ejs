
<% include ./partials/head.ejs %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>UPDATE PROFILE</title>
</head>
<body style="background-color:rgb(173, 243, 189);">
  <main style='margin:6em;'>
    <h1 style="color:rgb(3, 100, 3); font-weight:bold;" align="center">ACCOUNT SETTINGS</h1>
    <form method="POST" action="/updateprofile"><br><br>

      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label"><b>Enter New User Name:</b></label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="title" placeholder="Enter New User Name">
        </div>
      </div>

      <br>

      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label"><b>Enter New Password:</b></label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="title" placeholder="Enter New Password">
        </div>
      </div>


      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label"><b>Re-Enter New Password:</b></label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="title" placeholder="Re-Enter New Password">
        </div>
      </div>

      <br>

      <div class="form-group row">
        <label for="profile_image" class="col-sm-2 col-form-label"><b>Enter Avatar URL Link:</b></label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="title" placeholder="Add Profile Image Link">
        </div>
      </div>

      <br>

      <div class="form-group row" style="text-align:right">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary btn-lg">CONFIRM</button>
        </div>
      </div>

      <br><br>

      <div class="form-group row" style="text-align:right">
        <div class="col-sm-10">
          <a href="/deleteaccount">
            <button type="submit" class="btn btn-danger active btn-lg">DELETE ACCOUNT</button>
          </a>
        </div>
      </div>

    </form>
  </main>
</body>
</html>

